<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
            <item name="colorPrimary">@android:color/black</item>
            <item name="colorPrimaryDark">@android:color/black</item>
            <item name="android:textColorPrimary">@android:color/white</item>
            <item name="colorAccent">@android:color/white</item>
            <item name="android:color">@android:color/white</item>
            <item name="android:windowBackground">@android:color/black</item>
            <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/black</item>
            <item name="android:actionBarStyle">@android:color/black</item>
    </style>
    
    <style name="song_category_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/categoryTextColor</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
